{
  "name": "Fontier",
  "version" : "0.0",
  "minimum_chrome_version": "16.0.912",
  "manifest_version": 2,
  "description" : "The quickest way of changing the font size and default font size in Chrome.",
  "permissions": ["tabs", "bookmarks", "experimental", "http://*.google.com/*"],
  "icons": {
    "256": "/img/icon_256.png",
    "128": "/img/icon_128.png",
    "48": "/img/icon_48.png"
  },
  "browser_action": {
    "default_icon": "/img/icon_48.png",
    "default_popup": "/html/popup.html"
  }
}